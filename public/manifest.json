{
  "manifest_version": 3,
  "name": "nextjs-chrome-extension",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/images/1.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "short_name": "nextjs",
  "version": "1.0.0",
  "description": "Chrome extension made with NextJS",
  "icons": {
    "16": "/icons/Logo-16.png",
    "32": "/icons/Logo-32.png",
    "48": "/icons/Logo-48.png",
    "128": "/icons/Logo-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Pastapaste"
  }
}
